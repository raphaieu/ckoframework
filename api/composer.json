{
    "name": "cko/framework-api",
    "description": "API Backend para CKO Framework",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "slim/php-view": "^3.2",
        "illuminate/database": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.4",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "post-install-cmd": [
            "mkdir -p database",
            "touch database/database.sqlite"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
